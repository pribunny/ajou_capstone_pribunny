{
  "manifest_version": 3,
  "name": "my-extension",
  "version": "1.0.0",
  "description": "",
  "icons": {
    "16": "extension_logo.png",
    "32": "extension_logo.png",
    "48": "extension_logo.png",
    "128": "extension_logo.png"
  },

  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["drag.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/"
  ]
}